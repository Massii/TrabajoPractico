PROGRAM=ex_SDL
CC=gcc
CFLAGS=-Wall -std=c99 -pedantic -g
LDFLAGS=-lm -lSDL2 -lSDL2_ttf

all: $(PROGRAM)

$(PROGRAM): test_sdl2.o velocidad.o
	$(CC) $(CFLAGS) $(LDFLAGS) test_sdl2.o velocidad.o -o $(PROGRAM)

test_sdl2.o: config.h velocidad.c velocidad.h
	$(CC) $(CFLAGS) -c test_sdl2.c

velocidad.o: velocidad.h
	$(CC) $(CFLAGS) -c velocidad.c

clean:
	rm -vf *.o $(PROGRAM)
